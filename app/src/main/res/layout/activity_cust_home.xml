<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustHome">


    <View
        android:id="@+id/view"
        android:layout_width="916dp"
        android:layout_height="1000dp"
        android:background="@drawable/appbg"
        tools:layout_editor_absoluteX="-253dp"
        tools:layout_editor_absoluteY="-3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#99EEEEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:id="@+id/logoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/navBarButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/navbar" />


        <!-- TextView for Market Name -->
        <TextView
            android:id="@+id/marketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Name"
            android:fontFamily="@font/poorstory"
            android:textSize="25dp"/>

        <!-- Space after TextView -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/market_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/logo"
            android:layout_gravity="end"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/marketLayout"
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoLayout">


        <!-- Spinner with layout_weight -->

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Search here"
            android:inputType="text" />


    </LinearLayout>

    <Spinner
        android:id="@+id/categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marketLayout"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:background="@drawable/cspinner"

        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        />


    <LinearLayout
        android:id="@+id/storesLayout"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories"
        >

        <Button
            android:id="@+id/store2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#FFFF"
            android:fontFamily="@font/poorstory"
            android:gravity="center"
            android:text="Store 1"
            android:textColor="#447806"
            android:textSize="30dp" />

        <Button
            android:id="@+id/store3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#FFFF"
            android:fontFamily="@font/poorstory"
            android:gravity="center"
            android:text="Store 1"
            android:textColor="#447806"
            android:textSize="30dp" />

        <Button
            android:id="@+id/store5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#FFFF"
            android:fontFamily="@font/poorstory"
            android:gravity="center"
            android:text="Store 1"
            android:textColor="#447806"
            android:textSize="30dp" />

        <Button
            android:id="@+id/store1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#FFFF"
            android:fontFamily="@font/poorstory"
            android:gravity="center"
            android:text="Store 1"
            android:textColor="#447806"
            android:textSize="30dp" />

        <Button
            android:id="@+id/store4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Store 1"
            android:textSize="30dp"
            android:backgroundTint="#FFFF"
            android:textColor="#447806"
            android:fontFamily="@font/poorstory"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>